@model VmMainQuestion

<style>
    .base-timer {
        position: relative;
        width: 40px;
        height: 40px;
    }

    .base-timer__svg {
        transform: scaleX(-1);
    }

    .base-timer__circle {
        fill: none;
        stroke: none;
    }

    .base-timer__path-elapsed {
        stroke-width: 5px;
        stroke: grey;
    }

    .base-timer__path-remaining {
        stroke-width: 5px;
        stroke-linecap: round;
        transform: rotate(90deg);
        transform-origin: center;
        transition: 1s linear all;
        fill-rule: nonzero;
        stroke: currentColor;
    }

    .base-timer__path-remaining.green {
        color: rgb(65, 184, 131);
    }

    .base-timer__path-remaining.orange {
        color: orange;
    }

    .base-timer__path-remaining.red {
        color: red;
    }

    .base-timer__label {
        position: absolute;
        width: 40px;
        height: 40px;
        top: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 5px;
    }

    .white-space-nowrap {
        white-space: nowrap;
    }
    .option{

    border: 2px solid #43ccb0;
    border-radius: 20px;
    background-color: rgb(177 213 250 / 60%);
    padding: 5px;
    margin: 10px;
    text-align: justify;
    }
    .chec{
        width:20px ;
        height:20px ;
        margin-left: 5px;
        margin-bottom: 5px;
        

    }
</style>



<form action="/question/question" method="post">
    <div class="page-content-wrapper py-3">
        <div class="container">
            <div class="card">
                <div class="row justify-content-between w-100 p-1 m-0 align-self-center ">
                    <p class="col-5 pr-2 btn btn-primary white-space-nowrap"> مجموع امتیاز :@ViewBag.rate</p>
                    <p class="col-5 pr-2 btn btn-primary white-space-nowrap">بیشترین امتیاز :@ViewBag.Max</p>
                </div>
            </div>
            <div class="card">

                <div class="card-body" style="background-color:#93adb163;">

                    <b style="line-height:50px;">@ViewBag.q.QuestionNumber . @ViewBag.q.Questinon</b>
                </div>
            </div>
            <div class="justify-content-sm-center card p-2 m-1">
                <div class="option">
                    <input class="chec" type="radio" value="1"
                        name="UserAnswer">@ViewBag.q.Answer1
                </div>
                <div class="option">
                    <input class="chec" type="radio" value="2"
                        name="UserAnswer">@ViewBag.q.Answer2
                </div>
                <div class="option">
                    <input class="chec" type="radio" value="3"
                        name="UserAnswer">@ViewBag.q.Answer3
                </div>
                <div class="option">
                    <input class="chec" type="radio" value="4"
                        name="UserAnswer">@ViewBag.q.Answer4
                </div>
            </div>
            <input type="text" style="display: none;" name="id" value="@ViewBag.q.QuestionNumber">
            <br>
            <div class="d-flex justify-content-around mr-2 row p-3 " style="background-color: white;">
                <div class="col-12"> <button type="submit" id="clickButton"
                        class="btn btn-primary form-control ">بعدی</button></div>
                <div class="col-12 mt-3" id="app" style="margin-right:270px;"></div>
            </div>
        </div>
    </div>
</form>
</div>
</div>
</div>

