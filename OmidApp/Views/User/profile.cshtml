@model VmUser
<div class="page-content-wrapper">
      <div class="container">
        <!-- Profile Wrapper-->
        <div class="profile-wrapper-area py-3">
          <!-- User Information-->
          <div class="card user-info-card">
            <div class="card-body p-4 d-flex align-items-center">
              <div class="user-profile me-3"><img src="img/bg-img/9.jpg" alt="">
                <div class="change-user-thumb">
                  <form>
                    <input class="form-control-file" type="file">
                    <button><i class="fa-solid fa-pen"></i></button>
                  </form>
                </div>
              </div>
              <div class="user-info">
                <p class="mb-0 text-dark">designing-world</p>
                <h5 class="mb-0">سوها جانات</h5>
              </div>
            </div>
          </div>
          <!-- User Meta Data-->
          <div class="card user-data-card">
            <div class="card-body">
              <form action="/user/adduser" method="post">
                <div class="mb-3">
                  <div class="title mb-2"><i class="fa-solid fa-at"></i><span>نام کاربری</span></div>
                  <input class="form-control" type="text" asp-for="UserName">
                </div>
                <div class="mb-3">
                  <div class="title mb-2"><i class="fa-solid fa-user"></i><span>نام و نام خانوادگی</span></div>
                  <input class="form-control" type="text" asp-for="FirstAndLastName">
                </div>
                <div class="mb-3">
                  <div class="title mb-2"><i class="fa-solid fa-phone"></i><span>تلفن</span></div>
                  <input class="form-control" type="text" asp-for="Phone">
                </div>
                <div class="mb-3">
                  <div class="title mb-2"><i class="fa-solid fa-envelope"></i><span>آدرس ایمیل</span></div>
                  <input class="form-control" type="email" asp-for="Email">
                </div>
                <div class="mb-3">
                  <div class="title mb-2"><i class="fa-solid fa-location-arrow"></i><span>آدرس حمل و نقل</span></div>
                  <input class="form-control" type="text" asp-for="Address">
                </div>
                <button class="btn btn-success w-100" type="submit">همه اطلاعات را ذخیره کنید</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>









